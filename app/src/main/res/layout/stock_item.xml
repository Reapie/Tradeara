<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#000000"
    android:backgroundTint="#000000">

    <TextView
        android:id="@+id/tvNameStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="Tesla, Inc."
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvPriceStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameStock"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="620,00 EUR"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvSymbolStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvNameStock"
        android:text="TSLA"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvDiffStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPriceStock"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="-31,89 (4,82%) "
        android:textColor="#FFFFFF" />
</RelativeLayout>